@model Category

<div class="card-body p-4">
    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Create Category</h2>
                <hr/>
            </div>
            <div class="form-floating py-2 mb-2">
                <input asp-for="Name" type="text" class="form-control bg-white border-0 shadow" />
                <label asp-for="Name" class="mb-1"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div> 
            <div class="form-floating py-2 mb-2">
                <input asp-for="Order" class="form-control bg-white border-0 shadow" />
                <label asp-for="Order" class="mb-1"></label>
                <span asp-validation-for="Order" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All"></div>
            <div class="row mt-3 d-flex">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-dark form-control">Create</button>
                </div>
                <div class="col-6 col-md-3 ms-auto">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">Back to list</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_validationScriptsPartial"/>
    }
}
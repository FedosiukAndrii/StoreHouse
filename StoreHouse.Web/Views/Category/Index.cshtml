@model List<Category>

<div class="container">
    <div class="row pt-4 pb-2 d-flex align-items-center">
        <div class="col-6">
            <h1>Category List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-secondary">
                <h3>
                    Create new category <i class="bi bi-plus-square"></i>
                </h3>
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped">
        <thead class="shadow">
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Category Order
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var category in Model.OrderBy(o => o.Order))
            {
                <tr class="shadow">
                    <td>
                        @category.Name
                    </td>
                    <td>
                        @category.Order
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-categoryId="@category.CategoryId" class="btn mx-2">
                                <i class="bi bi-pencil-square" style="font-size: 1.5rem;"></i>
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-categoryId="@category.CategoryId" class="btn mx-2">
                                <i class="bi-3x bi-trash3-fill" style="font-size: 1.5rem;"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
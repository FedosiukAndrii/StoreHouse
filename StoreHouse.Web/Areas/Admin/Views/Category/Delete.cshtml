@model Category

<div class="card-body p-4">
    <form method="post">
        <input asp-for="CategoryId" hidden />
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Delete Category</h2>
                <hr />
            </div>
            <div class="mb-2 form-floating">
                <input asp-for="Name" type="text" disabled class="form-control shadow" />
                <label asp-for="Name" class="mb-1">Category Name</label>
            </div>
            <div class="mb-2 form-floating">
                <input asp-for="Order" disabled class="form-control shadow" />
                <label asp-for="Order" class="mb-1"></label>
            </div>
            <div asp-validation-summary="All"></div>
            <div class="row mt-3 d-flex">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3 ms-auto">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">Back to list</a>
                </div>
            </div>
        </div>
    </form>
</div>


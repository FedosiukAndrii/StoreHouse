@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Update Category</h2>
            <hr />
        </div>
        <div class="mb-2 form-floating">
            <input asp-for="Name" type="text" class="form-control bg-white shadow rounded" />
            <label asp-for="Name" class="mb-1">Category Name</label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-2 form-floating">
            <input asp-for="Order" type="text" class="form-control bg-white shadow rounded" />
            <label asp-for="Order" class="mb-1"></label>
            <span asp-validation-for="Order" class="text-danger"></span>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="row mt-3 d-flex">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-dark form-control">Update</button>
            </div>
            <div class="col-6 col-md-3 ms-auto">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">Back to list</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_validationScriptsPartial" />
    }
}